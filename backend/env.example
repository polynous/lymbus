# Lymbus Backend Environment Configuration

# Security
SECRET_KEY=your-super-secret-key-here-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./lymbus.db
# For production, use PostgreSQL: postgresql://user:password@localhost/lymbus

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:3004,http://127.0.0.1:3000,http://127.0.0.1:3004

# API Configuration
API_V1_STR=/api
PROJECT_NAME=Lymbus
VERSION=1.0.0

# Email Configuration (for future use)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@lymbus.com

# Default Admin User (for initial setup only)
DEFAULT_ADMIN_EMAIL=admin@lymbus.com
DEFAULT_ADMIN_PASSWORD=
DEFAULT_ADMIN_FIRST_NAME=Admin
DEFAULT_ADMIN_LAST_NAME=Lymbus 